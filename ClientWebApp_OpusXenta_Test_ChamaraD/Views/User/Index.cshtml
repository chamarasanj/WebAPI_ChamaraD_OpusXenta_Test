@model IEnumerable<ClientWebApp_OpusXenta_Test_ChamaraD.Models.UserViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>User Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")

</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.LoginEmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>

      

        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>

    <td>
        @Html.DisplayFor(modelItem => item.LoginEmail)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Password)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FirstName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LastName)
    </td>

   

   

    <td>
        @Html.DisplayFor(modelItem => item.IsActive)
    </td>
    <td>
      
        <a href="@Url.Action("Edit","User",new {id=item.UserID})" class="btn btn-default"> <i class="fa fa-pencil"></i> Edit</a>
       
        
        @*@Html.ActionLink("Details", "Details", new { id = item.UserID }) |*@


        <a onclick="Delete(@item.UserID)" class="btn btn-default">  <i class="fa fa-trash"></i>Delete</a>
    </td>
</tr>
}

</table>


@section scripts
    {
        <script>

            $(function ()
            {
                var successMessage = '@TempData["SuccessMessage"]'

                if (successMessage != '')
                {
                    alertify.success(successMessage);
                }
            });

            function Delete(id)
            {
                alertify.confirm('OpusXentaTest_ChamaraD', 'Confirm Delete ???', function () {
                    window.location.href = '@Url.Action("Delete","User")/' + id;

                }, null);
            }

        </script>
    }
