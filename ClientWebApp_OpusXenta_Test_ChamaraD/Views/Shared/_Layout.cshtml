<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/alertifyjs/alertify.min.css" rel="stylesheet" />
    <link href="~/Content/alertifyjs/themes/default.min.css" rel="stylesheet" />

</head>
<body>



    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Developer Assesment - OpusXenta", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>



            <div class="navbar-collapse collapse">

                <ul class="nav navbar-nav">

                    @*<li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("User", "Index", "User")</li>
                        <li>@Html.ActionLink("Company", "Index", "Company")</li>
                        <li>@Html.ActionLink("Employee", "Index", "Employee")</li>*@

                </ul>


            </div>
        </div>
    </div>
    <div class="container body-content">


        @{
            <br />

            if (Session["LoggedUserEmail"] != null)
            {
                string userName = Session["LoggedUserEmail"].ToString();
                @Html.Label("Name", "Logged User :"); @Html.Label("Name", userName);
            }
            <br />
            if (Session["UserType"] != null)
            {
                string userType = Session["UserType"].ToString();

                @Html.Label("Name", "Logged User Type:"); @Html.Label("Name", userType);
            }
        }





        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Web API & Client Web App - Chamara D. </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <script src="~/Scripts/alertify.min.js"></script>

    @RenderSection("scripts", required: false)

</body>
</html>
