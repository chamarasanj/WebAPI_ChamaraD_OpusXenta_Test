@model IEnumerable<ClientWebApp_OpusXenta_Test_ChamaraD.Models.EmployeeViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Employee Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.CompanyID)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.CompanyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Skills)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.CompanyID)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Skills)
            </td>

            <td>
                <a href="@Url.Action("Edit","Employee",new {id=item.EmployeeID})" class="btn btn-default"> <i class="fa fa-pencil"></i> Edit</a> |

                <a href="@Url.Action("Details","Employee",new {id=item.EmployeeID})" class="btn btn-default"> <i class="fas fa-info-circle"></i> Details</a>

                <a onclick="Delete(@item.EmployeeID)" class="btn btn-default">  <i class="fa fa-trash"></i>Delete</a>
            </td>
        </tr>
    }

</table>


@section scripts
    {
    <script>

            $(function ()
            {
                var successMessage = '@TempData["SuccessMessage"]'

                if (successMessage != '')
                {
                    alertify.success(successMessage);
                }
            });

            function Delete(id)
            {
                alertify.confirm('OpusXentaTest_ChamaraD', 'Confirm Delete ???', function () {
                    window.location.href = '@Url.Action("Delete","Employee")/' + id;

                }, null);
            }

    </script>
}

